module Random;
export *;

interface RandomBool {
   Bool getNextBool();
}

class CRandomBool implements RandomBool {
   Bool value = True;
   
   Unit setValue(Bool b) {
      value = b;
   }
   
   Unit changeValue() {
      Fut<Unit> fut1;
      Fut<Unit> fut2;
      fut1 = this!setValue(True);
      fut2 = this!setValue(False);
      await fut1? & fut2?;
   }

   Bool getNextBool() {
      this.changeValue();
      return this.value;
   }   
}

